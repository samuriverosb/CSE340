<% if (title) { %>
  <h1>
    <%= title %>
  </h1>
  <% } else { res.redirect('/') } %>

    <%- messages() %>

      <% if (errors) { %>
        <ul class="notice">
          <% errors.array().forEach(error=> { %>
            <li>
              <%= error.msg %>
            </li>
            <% }) %>
        </ul>
        <% } %>

          <form name="login" action="/account/login" method="post" id="loginForm">
            <label for="email">Email:</label>
            <input type="email" id="email" name="account_email" required>
            <label for="password">Password:</label>
            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special
              character</span>
            <input type="password" name="account_password" id="password"
              pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
            <button type="submit">LOGIN</button>
            <p>No account? <a href="/account/register">Sign-Up</a></p>
          </form>